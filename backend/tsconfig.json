{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "build",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src/",
    "paths": {
      "@scripts/*": ["scripts/*"],
      "@service/*": ["service/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"]
    }
  },
  "exclude": ["node_modules"]
}
